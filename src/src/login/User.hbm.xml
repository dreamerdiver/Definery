<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="src.login.User" table="users">
        <meta attribute="class-description">
            This class contains the user role detail.
        </meta>
        <id name="userID" type="int" column="user_id">
            <generator class="native"/>
        </id>
        <property name="username" column="user_name" type="string"/>
        <property name="password" column="user_pass" type="string"/>
    </class>
    <class name="src.login.UserData" table="user_data">
        <meta attribute="class-description">
            This class contains the user role detail.
        </meta>
        <id name="userID" type="int" column="user_id">
            <generator class="src.login.User"/>
        </id>
        <property name="username" column="user_name" type="string"/>
        <property name="accountAge" column="account_age" type="int"/>
        <property name="votedEntries" column="voted_entries" type="string"/>
        <property name="submittedEntries" column="submitted_entries" type="string"/>
    </class>
    <class name="src.login.UserRole" table="user_roles">
        <meta attribute="class-description">
            This class contains the user role detail.
        </meta>
        <id name="userID" type="int" column="user_id">
            <generator class="src.login.User"/>
        </id>
        <property name="username" column="user_name" type="string"/>
        <property name="userRole" column="role_name" type="string"/>
    </class>
</hibernate-mapping>
