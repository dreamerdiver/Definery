<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

<!--
    *
    *Servlet Declarations
    *
-->
    <servlet>
        <servlet-name>ApplicationStartup</servlet-name>
        <servlet-class>servlets.ApplicationStartup</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>DisplayLists</servlet-name>
        <servlet-class>servlets.DisplayLists</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>DisplayEntry</servlet-name>
        <servlet-class>servlets.DisplayEntry</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubmitEntry</servlet-name>
        <servlet-class>servlets.SubmitEntry</servlet-class>
    </servlet>

<!--
    *
    *Servlet Mappings
    *
-->
    <servlet-mapping>
        <servlet-name>ApplicationStartup</servlet-name>
        <url-pattern>/appStart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayLists</servlet-name>
        <url-pattern>/displayLists</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayEntry</servlet-name>
        <url-pattern>/displayEntry</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubmitEntry</servlet-name>
        <url-pattern>/submitEntry</url-pattern>
    </servlet-mapping>

<!--
    *
    *Security Constraints
    *
-->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Admin</web-resource-name>
            <url-pattern>/admin.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Account</web-resource-name>
            <url-pattern>/account.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Submit</web-resource-name>
            <url-pattern>/submit.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>

