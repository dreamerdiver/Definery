<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="src.login.User" table="users">
        <meta attribute="class-description">
            This class contains the user detail.
        </meta>
        <id name="userID" type="int" column="user_id">
            <generator class="native"/>
        </id>
        <one-to-one name="userID" class="src.login.UserData" cascade="save-update"/>
        <one-to-one name="userID" class="src.login.UserRole" cascade="save-update"/>
        <property name="username" column="user_name" type="java.lang.String"/>
        <property name="password" column="user_pass" type="java.lang.String"/>
    </class>
</hibernate-mapping>
